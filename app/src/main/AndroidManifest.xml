<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.collaborativeband">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SongInfo"></activity>
        <activity android:name=".ui.addanewsong.addanewsongActivity" />
        <activity android:name=".ui.SongRecognizing" />
        <activity android:name=".ui.addanewplaylist.AddsongsActivity">
            <intent-filter>
                <action android:name=".ui.addanewplaylist.AddsongsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"> <!-- 使软键盘不挡住输入框 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- addanewplaylist -->
        <activity android:name=".ui.addanewplaylist.addanewplaylistActivity">
            <intent-filter>
                <action android:name=".ui.addanewplaylist.addanewplaylistActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>